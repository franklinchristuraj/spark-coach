# SPARK Coach API Configuration
# Copy this file to .env and fill in your actual values

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
TTS_API_KEY=your_tts_api_key_here

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3000

# SPARK Coach API Key (for client authentication)
SPARK_COACH_API_KEY=your_secure_api_key_here

# Database
DATABASE_URL=sqlite:///data/spark_coach.db

# FCM Configuration (for push notifications)
FCM_CREDENTIALS_PATH=/secrets/fcm.json

# Allowed CORS origins (comma-separated). Add your production domain here.
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://coach.ziksaka.com
